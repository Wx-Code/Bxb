<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="SystemConfig"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="SystemConfigCache" Type="Lru">
      <FlushInterval Hours="1"/>
    </Cache>
  </Caches>
  
  <Statements>

    <!-- 字段 -->
    <Statement Id="Fields">
      `ConfigName`, `ConfigValue`, `Remark`, `CreateTime`, `CreateUser`
    </Statement>
    
    <!-- 新增 -->
    <Statement Id="Insert">
      INSERT INTO
        `SystemConfig`
        (
          `ConfigName`, `ConfigValue`, `Remark`, `CreateTime`, `CreateUser`
        )
      VALUES
        (
          ?ConfigName, ?ConfigValue, ?Remark, ?CreateTime, ?CreateUser
        )
      ;
    </Statement>
    
    <!-- 更新 -->
    <Statement Id="Update">
      UPDATE
        `SystemConfig`
      SET
        `ConfigValue`=?ConfigValue
        <IsEmpty Prepend="," Property="Remark">
          `Remark`=?Remark
        </IsEmpty>
      WHERE
        `ConfigName`=?ConfigName
      ;
    </Statement>
    
    <!-- 查询单条数据 -->
    <Statement Id="QuerySingle">
      SELECT
        <Include RefId="Fields"></Include>
      FROM
        `SystemConfig`
      WHERE
        `ConfigName`=?configName
      ;
    </Statement>
    
  </Statements>
</SmartSqlMap>


